<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#232323"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/nointernet_animationView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:lottie_rawRes="@raw/no_internet"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/opps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nointernet_animationView"
        android:layout_centerInParent="true"
        android:text="OOPS"
        android:textColor="#FD3367"
        android:textSize="60dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/check_internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/opps"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif"
        android:text="Please Check Internet"
        android:textColor="#CCBDBD"
        android:textSize="20dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/retry_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_internet"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:text="RETRY"
        android:textColor="@color/red"


        android:textSize="20dp" />



</RelativeLayout>